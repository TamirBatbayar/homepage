<h1>ページ一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>ページ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @page_contents.each do |page_content| %>
      <tr>
        <td><%= page_content.name %></td>
        <td><%= link_to '表示', page_content %></td>
        <td><%= link_to '編集', edit_page_content_path(page_content) %></td>
        <td><%= link_to '削除', page_content, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ページ作成', new_page_content_path, :class => "btn btn-lg btn-default" %>