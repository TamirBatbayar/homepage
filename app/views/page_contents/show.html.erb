<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
	<% if current_user.admin? %>
		<%= link_to 'Edit', edit_page_content_path(@page_content), :class => "btn btn-lg btn-primary" %>
		<%= link_to 'Back', page_contents_path, :class => "btn btn-lg btn-default" %>
	<% end %>
<% end %>

<h3>
  <%= @page_content.name %>
</h3>

<p>
  <%= @page_content.content.html_safe %>
</p>

